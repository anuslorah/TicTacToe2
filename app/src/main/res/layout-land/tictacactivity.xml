<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal"
    android:padding="20dp"
    android:stretchColumns="3">

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button00"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="42sp"
            android:text="@string/button00" />

        <Button
            android:id="@+id/button01"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="42sp"
            android:text="@string/button01" />

        <Button
            android:id="@+id/button02"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="42sp"
            android:text="@string/button02" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button10"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="42sp"
            android:text="@string/button10" />

        <Button
            android:id="@+id/button11"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="42sp"
            android:text="@string/button11" />

        <Button
            android:id="@+id/button12"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="42sp"
            android:text="@string/button12" />

        <TextView
            android:id="@+id/winner"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:text="@string/winner" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button20"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="42sp"
            android:text="@string/button20" />

        <Button
            android:id="@+id/button21"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="42sp"
            android:text="@string/button21" />

        <Button
            android:id="@+id/button22"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="42sp"
            android:text="@string/button22" />

        <Button
            android:id="@+id/start"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_gravity="fill_vertical"
            android:text="@string/start" />
    </TableRow>


</TableLayout>
